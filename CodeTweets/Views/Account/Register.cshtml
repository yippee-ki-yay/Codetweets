<div class="container">
    <div class="wrapper">
        <form action="" method="post" name="Login_Form" class="form-signin" ng-submit="register()" ng-controller="RegisterController">
            <h3 class="form-signin-heading">Hey, how about you register?</h3>
            <hr class="colorgraph"><br>

            <input type="text" class="form-control" name="email" placeholder="Email" required="" autofocus="" ng-model="registerForm.emailAddress" />
            <input type="text" class="form-control" name="user" placeholder="User" required="" ng-model="registerForm.user" />

            <input type="password" class="form-control" name="password" placeholder="Password" required="" autofocus="" ng-model="registerForm.password" />
            <input type="password" class="form-control" name="confirmPassword" placeholder="Confirm Password" required="" ng-model="registerForm.confirmPassword" />

            <button class="btn btn-lg btn-primary btn-block reg_btn" name="Submit" value="Login" type="Submit">Register</button>
        </form>
    </div>
</div>
